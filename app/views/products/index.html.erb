<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>

    <h2><%= product.name %></h2>
    <%= image_tag(product.avatar,size: "25x25", class: "product-image") %>
    <p><b>Descricao:</b> <%= product.description %></p>
    <p><b>Categoria:</b> <%= product&.category&.name %></p>
    <p><b>Preco:</b> <%= number_to_currency(product.price, unit: "R$", separator: ",", delimiter: ".") %></p>
    <p>
    <button type="button" class="btn btn-primary btn-sm"> <%= link_to "Show this product", product %> </button>
    </p>
  <% end %>
</div>

<% if current_user && current_user.admin? %>
  <%= link_to "New product", new_product_path %>
<% end %>
