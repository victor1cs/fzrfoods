<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>

    <h2><%= product.name %></h2>
    <%= image_tag(product.avatar,size: "250x250", class: "product-image") %>
    <p><b>Descricao:</b> <%= product.description %></p>
    <p><b>Preco:</b> <%= number_to_currency(product.price, unit: "R$", separator: ",", delimiter: ".") %></p>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
